for n in range(2,10):
    for x in range(2,n):
        if(n%x==0):
            break
    else:
        print(f"{n} is a prime number")

friends=["Mahmoud","Madah","Ahmed","Yasser","Taha"]
guests=["Mahmoud","Mohamed","Ahmed"]
print(friends[-3:-1])

friendAndGuest=[name for name in friends if name in guests]
print(friendAndGuest)
numbers=[0,1,2,3,4]
doubleNumber=[number*2 for number in numbers]
print(doubleNumber)

friend=input("enter your friend name : ")
lowerFriends =[name.lower() for name in friends] 
if friend .lower() in lowerFriends:
    print(f"{friend.title()} is also my friend")
else:
    print(f"{friend.title()} is  not my friend")


friendDict={
    friends[i]:numbers[i]
    for i in range(len(friends))
}
friendDicZipper=dict(zip(friends,numbers))


print(friendDict)
print(friendDicZipper)


print(list(enumerate(friends  )  ) )